// Dentro do arquivo prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id              String   @id @default(uuid())
  nome            String   @unique
  unidadeMedida   String
  quantidade      Float?
  fornecedor      String?
  dataRecebimento String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Usuario {
  id                String    @id @default(uuid())
  email             String    @unique
  nome              String
  senha             String
  
  // --- NOVOS CAMPOS PARA RECUPERAÇÃO DE SENHA ---
  resetToken        String?   // O código enviado por e-mail
  resetTokenExpires DateTime? // Até quando esse código é válido
  // ----------------------------------------------

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Producao {
  id           String   @id @default(uuid())
  nomeProduto  String
  quantidade   Float
  dataProducao String
  observacao   String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}