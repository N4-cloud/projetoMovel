// Dentro do arquivo prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Produto {
  id            String   @id @default(uuid())
  nome          String   @unique
  unidadeMedida String
  quantidade      Float?   
  fornecedor      String?  
  dataRecebimento String?

  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Usuario {
  id        String   @id @default(uuid())
  email     String   @unique // O e-mail deve ser Ãºnico
  nome      String
  senha     String   // Aqui guardaremos a senha hasheada

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Producao {
  id              String   @id @default(uuid())
  nomeProduto     String   // Qual produto foi produzido
  quantidade      Float    // Quanto foi produzido
  dataProducao    String   // Quando foi produzido
  observacao      String?  // Alguma nota extra (opcional)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}